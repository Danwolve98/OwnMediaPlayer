<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OwnMediaPlayerButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:checkable">true</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconGravity">textTop</item>
        <item name="rippleColor">@null</item>
        <item name="itemRippleColor">@null</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/red_lan</item>
        <item name="android:progressBackgroundTint">@color/red_lan</item>
        <item name="android:thumbTint">@color/red_border</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_fast</item>
        <item name="android:windowExitAnimation">@anim/fade_out_fast</item>
    </style>

    <style name="GalleryDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>